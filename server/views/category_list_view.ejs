<%- include("header") %>
<div style="border: 2px ; height: 500px; width: 1000px;">
    <form action="addCategorySubmit" method="post">
        <h1> Add Category</h1>
        <table align="center" class="table table-bordered">
            <tr>
                <td>Category Name</td>
                <td><input type="text" name="cname" required/></td>
            </tr>
            <tr>
                <td>Category Description</td>
                <td><textarea name="cDescription" required></textarea></td>
            </tr>
            <tr>
                <td>Category Status</td>
                <td><input type="text" name="cStatus" required/></td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Submit" />
                </td>
            </tr>
        </table>
    </form>
</div>
<h1>Category List</h1>
<div style="border: 2px ; height: 500px; width: 1000px;">
    <table class="table table-stripped" align="center">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Category Description</th>
                <th>Category Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (catList.length > 0) { %>
                <% for (let d of catList) { %>
                    <tr>
                        <td><%= d.catname %></td>
                        <td><%= d.cDescription || 'N/A' %></td>
                        <td><%= d.cStatus || 'N/A' %></td>
                        <td>
                            <a href="/editcategory?catid=<%= d._id %>">Edit</a> | 
                            <a href="/delcategory?catid=<%= d._id %>">Delete</a>
                        </td>
                    </tr>
                <% } %>
            <% } else { %>
                <tr>
                    <td colspan="4" align="center">No categories found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include("footer") %>
