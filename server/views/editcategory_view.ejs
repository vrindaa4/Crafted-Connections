<%- include("header") %>

<div style="border: 2px red dotted; height: 500px; width: 1000px;">
    <form action="editCategorySubmit" method="post">
        <table align="center" class="table table-bordered">
            <tr>
                <td>Edit Category Name</td>
                <td><input type="text" name="catname" value="<%=category.catname %>" required/></td>
              </tr>
              <tr>
                <td>Edit Category Description</td>
                <td><input type="text" name="catdesc" value="<%=category.catdesc %>" required/></td>
            </tr>
            <tr>
                <td>Edit Category Status</td>
                <td><input type="text" name="cStatus" value="<%=category.cStatus%>" required/></td>
            </tr>
            <input type="hidden" name="catid" value="<%=category._id%>" />
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Update" />
                </td>
            </tr>
        </table>
    </form>
</div>

<%- include("footer") %>